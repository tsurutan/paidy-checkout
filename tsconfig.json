{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "typeRoots": ["types", "node_modules/@types"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/index.tsx", "jest-setup.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}